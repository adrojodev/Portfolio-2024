---
import data from "../../data/jobs.json";
import Heading from "../../components/Heading.astro";

const jobs = data.jobs;
---

<section id="jobs" class="flex flex-col gap-1">
  <Heading>Jobs</Heading>
  <div class="flex flex-col gap-5">
    {
      jobs.map((job) => (
        <div class="flex flex-col gap-0">
          <h3 class="font-bold text-accent text-lg md:text-xl">
            {job.company}{" "}
            <span class="font-medium text-body md:text-lg">
              {job.startYear} - {job.endYear}
            </span>
          </h3>
          <p class="text-body">{job.text}</p>
        </div>
      ))
    }
  </div>
</section>
