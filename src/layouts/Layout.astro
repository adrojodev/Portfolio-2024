---
import { ViewTransitions } from "astro:transitions";
import "@fontsource-variable/work-sans";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="I'm Rojo, visit my portfolio!" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="view-transition" content="same-origin" />
    <meta name="og:title" content={title} />
    <meta name="og:description" content="I'm Rojo, visit my portfolio!" />
    <meta name="og:image" content="/og-image.jpg" />
    <meta name="og:url" content="https://adrojo.com" />
    <meta name="og:type" content="website" />
    <meta name="og:site_name" content="Rojo's Portfolio" />
    <meta name="og:locale" content="en_US" />
    <meta name="og:locale:alternate" content="es_ES" />
    <meta name="twitter:card" content="/og-image.jpg" />
    <meta name="twitter:site" content="@ad_rojo" />
    <meta name="twitter:title" content="My Portfolio" />
    <meta name="twitter:description" content="I'm Rojo, visit my portfolio!" />
    <meta name="twitter:image" content="/og-image.png" />
    <meta name="apple-mobile-web-app-title" content="Rjo" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body
    class="flex flex-col gap-10 font-medium bg-background text-body border-border"
  >
    <slot />
    <style>
      html {
        scroll-behavior: smooth;
      }
      body {
        font-family: "Work Sans Variable", sans-serif;
      }
    </style>
  </body>
</html>
